<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.DadsSolitaire"
        versionCode = "2"
        version     = "2.0" >
	
    <name>Dad's Saturday Solitaire</name>
    <description>
	    The solitaire game my dad would play on Saturday mornings.
    </description>

    <author href="https://build.phonegap.com" email="j_flottmeyer@voilamediagroup.com">
        John Flottmeyer
    </author>
    
    <gap:platform name="ios" />
    <gap:platform name="android" />
    
    <!-- third party plugins -->
	<gap:plugin name="cordova-plugin-statusbar" source="npm" />
	<gap:plugin name="phonegap-admob" source="npm"/>
	 
    <!-- universal preferences -->
    <preference name="phonegap-version" value="cli-6.5.0" /> 
    <preference name="orientation" value="portrait" />        
    <preference name="fullscreen" value="false" />
	
	<!-- ios preferences --> 
    <preference name="target-device" value="universal" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    
   
    <!-- ios icons 7+ -->
    
    <!-- iPhone 6 / 6+ -->
	<icon src="icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
	<icon src="icons/ios/icon-60.png" platform="ios" width="60" height="60" />
	<icon src="icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />
	
	<!-- iPad -->
	<icon src="icons/ios/icon-76.png" platform="ios" width="76" height="76" />
	<icon src="icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
	<icon src="icons/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />
	
	<!-- Settings Icon -->
	<icon src="icons/ios/icon-small.png" platform="ios" width="29" height="29" />
	<icon src="icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
	<icon src="icons/ios/icon-small@3x.png" platform="ios" width="87" height="87" />
	
	<!-- Spotlight Icon -->
	<icon src="icons/ios/icon-40.png" platform="ios" width="40" height="40" />
	<icon src="icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
	<icon src="icons/ios/icon-40@3x.png" platform="ios" width="120" height="120" />
	
	<!--ios 6.1 -->
	<!-- iPhone / iPod Touch -->
	<icon src="icons/ios/icon.png" platform="ios" width="57" height="57" />
	<icon src="icons/ios/icon@2x.png" platform="ios" width="114" height="114" />
	
	<!-- iPad -->
	<icon src="icons/ios/icon-72.png" platform="ios" width="72" height="72" />
	<icon src="icons/ios/icon-72@2x.png" platform="ios" width="144" height="144" />
	
	<!-- iPad Spotlight and Settings Icon -->
	<icon src="icons/ios/icon-small-50.png" platform="ios" width="50" height="50" />
	<icon src="icons/ios/icon-small-50@2x.png" platform="ios" width="100" height="100" />
	
	<!--DROID ICONS-->
	<icon src="icons/android/ldpi.png" platform="android" qualifier="ldpi" />
	<icon src="icons/android/mdpi.png" platform="android" qualifier="mdpi" />
	<icon src="icons/android/hdpi.png" platform="android" qualifier="hdpi" />
	<icon src="icons/android/xhdpi.png" platform="android" qualifier="xhdpi" />
	<icon src="icons/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
	<icon src="icons/android/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

    <!-- iPhone and iPod touch -->
	<splash src="screens/ios/Default.png" platform="ios" width="320" height="480" />
	<splash src="screens/ios/Default@2x.png" platform="ios" width="640" height="960" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="screens/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />
	
	<!-- iPhone 6 -->
	<splash src="screens/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
	<splash src="screens/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
	<splash src="screens/ios/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
	
	<!-- iPad -->
	<splash src="screens/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
	<splash src="screens/ios/Default-Landscape.png" platform="ios" width="1024" height="768" />
	
	<!-- Retina iPad -->
	<splash src="screens/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
	<splash src="screens/ios/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
	
	<!--Droid Splash-->
	<splash src="icons/screens/android/port-ldpi.png" platform="android" qualifier="port-ldpi" />
	<splash src="icons/screens/android/land-ldpi.png" platform="android" qualifier="land-ldpi" />
	<splash src="icons/screens/android/port-mdpi.png" platform="android" qualifier="port-mdpi" />
	<splash src="icons/screens/android/land-mdpi.png" platform="android" qualifier="land-mdpi" />
	<splash src="icons/screens/android/port-hdpi.png" platform="android" qualifier="port-hdpi" />
	<splash src="icons/screens/android/land-hdpi.png" platform="android" qualifier="land-hdpi" />
	<splash src="icons/screens/android/port-xhdpi.png" platform="android" qualifier="port-xhdpi" />
	<splash src="icons/screens/android/land-xhdpi.png" platform="android" qualifier="land-xhdpi" />
	<splash src="icons/screens/android/port-xxhdpi.png" platform="android" qualifier="port-xxhdpi" />
	<splash src="icons/screens/android/land-xxhdpi.png" platform="android" qualifier="land-xxhdpi" />
	<splash src="icons/screens/android/port-xxxhdpi.png" platform="android" qualifier="port-xxxhdpi" />
	<splash src="icons/screens/android/land-xxxhdpi.png" platform="android" qualifier="land-xxxhdpi" />
	
	<gap:config-file platform="ios" parent="ITSAppUsesNonExemptEncryption" mode="add">
		<false/>
	</gap:config-file>
</widget>
